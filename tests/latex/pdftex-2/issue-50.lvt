          </if>
          <else>
            <text variable="issue" suffix="hello"/>
          </else>
        </choose>
      </group>
      <group>
        <choose>
          <if type="article-journal article-magazine article-newspaper" match="any">
            <date form="text" variable="issued"/>
          </if>
        </choose>
      </group>
    </group>
  </macro>
  <macro name="Page-URL">
