                  </names>
                </if>
                <else-if match="any" variable="editor">
                  <text macro="editor"/>
                </else-if>
              </choose>
            </group>
            <text variable="container-title" text-case="title" font-style="italic"/>
          </group>
        </if>
        <else>
          <group delimiter=" ">
            <text term="in"/>
            <text variable="container-title" text-case="title" font-style="italic"/>
          </group>
        </else>
      </choose>
    </group>
